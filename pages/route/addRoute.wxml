<!--pages/route/addRoute.wxml-->
<view class='parent'>

  <input class='input' bindinput='input' placeholder='按此输入路线名称'></input>
  <view style='background:#f5f5f5;height:10rpx;'></view>


  <path path='{{route}}' bind:chooseAddress="chooseAddress"></path>

  <block wx:if='{{showAddMore}}'>
    <view style='margin-top: 10rpx;  padding-left: 10rpx;  display: flex;  flex-direction: row;  justify-items: baseline;  align-items: flex-end;' bindtap='addMoreCity' hidden="{{!showAddMore}}">
      <text style='font-size:40rpx;color:#000;'>+</text>
      <text style='font-size:32rpx;color:#333;margin-left: 10rpx;'>添加地址</text>
      <text style='font-size:28rpx;color:#999;margin-left: 10rpx;'>请按照卸货先后顺序填写</text>
    </view>
  </block>

  <view class='addroute' bindtap='submit'>确定添加</view>
</view>