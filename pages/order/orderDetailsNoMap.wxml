        </view>
      </view>

    </view> -->

    <path  path='{{orderDetail.route}}'></path>
  </view>

  <view class='line3'>

    <view class='hor divider'>
      <text class='title'>订单车型</text>
      <text class='detail'>{{orderDetail.car_type}} {{orderDetail.busSize}}</text>

    </view>

    <view class='hor divider' hidden='{{orderDetail.category==1}}'>

      <text class='title'>货物类型</text>
      <text class='detail'>{{orderDetail.cargoCategory}}({{orderDetail.cargoType}}) </text>

    </view>
    <view hidden='{{orderDetail.category==1}}' class='hor divider'>

      <text class='title'>货物重量/体积</text>
      <text class='detail'>{{orderDetail.cargoWeight}}</text>

    </view>
    <view class='hor divider'>

      <text class='title'>联系人</text>
      <text class='detail'>{{orderDetail.contactser}} {{orderDetail.conMobile}}</text>

    </view>
    <view class='hor divider'>

      <text class='title'>订单备注</text>
      <text class='detail'>{{orderDetail.remark}}</text>

    </view>
  </view>

  <view class='line4'>

    <view class='hor'>
      <view class='vertical center' style='flex-grow: 1;'>
        <view class='status'>{{payStatus}}</view>
        <text class='tips' hidden='{{orderDetail.status!=11}}'>司机尚未确认收款,订单未完成,如有问题请联系司机或客服!</text>
      </view>

      <view class='vertical center'>
        <view class='price'>{{price}}</view>
        <view class='pricedetails' hidden='{{!pricedetails}}'>运费详情</view>
      </view>
    </view>

  </view>


  <view class='line5' hidden='{{orderDetail.status!=3}}'>
    <view class='receiveGoods' bindtap='ReceiveGoods'>
      <text>确认收货</text>
    </view>
  </view>

  <view class='line5' hidden='{{!(orderDetail.status==4||orderDetail.status==5)}}'>
    <view class='receiveGoods' bindtap='evaluate'>
      <text>评价</text>
    </view>
  </view>
</view>
<evaluate viewhidden='{{!isShowEavluate}}' unCheckedSrc='{{unCheckedSrc}}' CheckedSrc='{{CheckedSrc}}' showGrade="false" bind:submit='submit' dataList='{{evaluateData}}'>
</evaluate>