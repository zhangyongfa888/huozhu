    <image class='driverPic' src='{{orderDetail.pic}}'></image>
    <text class='driverPhone'>{{orderDetail.driverMobile}}</text>
  </view>


  <view class='line1 hor'>

    <text class='sendTime'>{{orderDetail.sendTime}}</text>

    <text class='orderCode'>#{{orderDetail.orderCode}}</text>
  </view>

  <view class='line2'>

