<!--pages/order/pOrderFreight.wxml-->
<view>
  <view style='background:#f5f5f5;height:20rpx;'></view>
  <view class='banner'>

    <view>
      <text style='color:#333;font-size:40rpx;'>￥{{price}}</text>
      <text style='color:#333;font-size:30rpx;'>(总里程{{distance}}公里)</text>

    </view>

    <view>
      <text style='color:#333;font-size:26rpx;margin-top:20rpx;'>产生高速费、停车费和搬运费，请用户额外支付\n若涉及逾时等候费，请与司机按收费标准结算</text>
    </view>
  </view>
  <view style='background:#dcdcdc;height:1rpx;'></view>

  <view wx:for='{{list}}' wx:key='index' class='item'>

    <text>{{item.title}}({{item.Distance}}公里)</text>
    <text>{{item.Price}}元</text>
  </view>
</view>