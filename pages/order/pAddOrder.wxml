<!--pages/order/pAddOrder.wxml-->
<view class='bg' style='padding-bottom:200rpx;'>

  <text class='p-order-title'> 订单联系人资料</text>

  <view class='p-order-contact' bindtap='chooseContact'>

    <view class='p-order-contact-item'>
      <image class='choose-contact-img' src='https://wx.cisdom.com.cn/public/smallob/image/ic_link_man.png'></image>
      <text class='p-order-contact-title'>{{allotAdd.contactser==null?"请选择联系人":allotAdd.contactser}}</text>
    </view>
    <view class='p-order-contact-item'>
      <image class='choose-contact-img' src='https://wx.cisdom.com.cn/public/smallob/image/ic_link_mobile.png'></image>
      <text class='p-order-contact-title'>{{allotAdd.con_mobile==null?"请选择联系人电话":allotAdd.con_mobile}}</text>
    </view>

    <view class='p-order-choose-contact'>

      <image class='choose-contact-img' src='https://wx.cisdom.com.cn/public/smallob/image/ic_address_book.png'></image>
      <text>通讯录</text>
    </view>
  </view>
  <text class='p-order-title'> 货物信息</text>
  <view class='p-order-info'>

    <view class='p-order-info-item' bindtap='showChooseGoodsType'>
      <text>货物类型</text>
      <block wx:if="{{allotAdd.cargo_category==null}}">
        <text class='p-order-info-center'>请选择</text>
      </block>
      <block wx:else>
        <text class='p-order-info-center'>{{allotAdd.cargoCategoryName}} {{allotAdd.cargoTypeName}} </text>
      </block>

      <image class='p-order-info-img' mode='aspectFit' src='https://wx.cisdom.com.cn/public/smallob/image/ic_arrow.png'></image>
    </view>
    <view style='height:1rpx;background:#dcdcdc;margin-left:25rpx;'></view>
    <view class='p-order-info-item'>
      <text>货物体积</text>
      <input class='p-order-info-input' placeholder='请输入货物体积' bindinput='inputVol'> 请输入货物体积</input>
      <!-- <image class='p-order-info-img' mode='aspectFit' src='https://wx.cisdom.com.cn/public/smallob/image/ic_arrow.png'></image> -->
    </view>

    <view style='height:1rpx;background:#dcdcdc;margin-left:25rpx;'></view>

    <view class='p-order-info-item'>
      <text>货物重量</text>
      <input class='p-order-info-input' placeholder='请输入货物重量' bindinput='inputWeight'>请输入货物重量</input>
      <!-- <image class='p-order-info-img' mode='aspectFit' src='https://wx.cisdom.com.cn/public/smallob/image/ic_arrow.png'></image> -->
    </view>

    <view style='height:1rpx;background:#dcdcdc;margin-left:25rpx;'></view>

    <view class='p-order-info-item' style='height:auto;'>
      <text>货物图片</text>
      <view class='p-order-info-addpic'>
        <view class='p-order-info-item' style='height:auto;'>
          <block wx:for='{{pics}}' style='height:auto;'>
            <image class='p-order-addpic' src='{{item}}' bindtap='uploadImage' bindlongpress='deleteImage' data-index='{{index}}'></image>
          </block>
        </view>
        <text class='tips'>货物图片最多不超过3张</text>
      </view>
    </view>

  </view>
  <text class='p-order-title'> 其他</text>
  <view class='p-order-info'>
    <view class='p-order-info-item' style='height:auto;' bindtap='orderRemark'>
      <view style='flex-grow: 1;'>
        <text style='width:200rpx;'>订单备注</text>
        <view hidden='{{allotAdd.remark.length==0}}' class='p-order-info-remark'>{{allotAdd.remark}}</view>
      </view>
      <image class='p-order-info-img' mode='aspectFit' src='https://wx.cisdom.com.cn/public/smallob/image/ic_arrow.png'></image>
    </view>
  </view>

  <view class='aggreement'>
    <view>
      <text>若产生高速费，停车费和搬运费，请客户额外支付 若涉及逾时等候费，请与司机按</text>
      <text class='color'>收费标准</text>
      <text>结算</text>
    </view>
    <view>
      <image src='{{hasRead?"https://wx.cisdom.com.cn/public/smallob/image/ic_spread_checked.png":"https://wx.cisdom.com.cn/public/smallob/image/ic_spread_unchecked.png"}}' class='p-order-info-img' bindtap='hasRead'></image>
      我已阅读并同意</view>
    <view>
      <text>河北智旦网络技术有限公司</text>
      <text class='color'>《货物托运服务协议》</text>
    </view>
  </view>

  <view class='submit-bottom'>
    <view class='submit-price-parent'>
      <text class='submit-price-show'>￥{{allotAdd.money}}</text>
      <text class='submit-price-detail color' bindtap='orderFreight'>运费详情</text>
    </view>
    <button bindtap='submit' class='supei-submit'>下一步</button>

  </view>

</view>

<view hidden='{{!showGoodsType}}'>
  <goodstype list='{{goodsType}}' bind:chooseGoodsType="chooseGoodsType"></goodstype>
</view>