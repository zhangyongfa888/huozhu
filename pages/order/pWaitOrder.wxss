/* pages/order/pWaitOrder.wxss */

.parent {
  position: relative;
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  padding-bottom: 160rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

.wait-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  justify-items: center;
  height: 172rpx;
  width: 710rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  background: white;
}

.wiat-tips {
  font-size: 28rpx;
  color: #787878;
  align-self: center;
  text-align: center;
}

.wait-add-money {
  position: absolute;
  right: 50rpx;
  background: #f78312;
  color: white;
  font-size: 30rpx;
  text-align: center;
  padding: 10rpx 30rpx 10rpx 30rpx;
  border-radius: 10rpx;
}

.wait-bottom {
  height: 100rpx;
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  justify-items: center;
  width: 710rpx;
  margin-left: 20rpx;
  bottom: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: white;
  box-shadow: -5rpx -5rpx 10rpx #f5f5f5, 5rpx 5rpx 10rpx #f5f5f5;
}

.wiat-money {
  color: #323232;
  font-size: 46rpx;
}

.wait-money-detail {
  position: absolute;
  right: 50rpx;
  color: #f78312;
  font-size: 24rpx;
}

.item {
  border-radius: 10rpx;
  background: white;
  margin: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}

.item-line2 {
  display: flex;
  flex-direction: row;
}

.time-img {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.item-time {
  flex-grow: 1;
  color: #b4b4b4;
  font-size: 30rpx;
}

.item-shunlu {
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #f78312;
}
