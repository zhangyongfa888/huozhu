<!--pages/order/pWaitOrder.wxml-->
<view class='parent'>

  <view class='wait-top'>

    <text class='wiat-tips'>正在同时合适的司机\n请耐心等待</text>
    <view class='wait-add-money'>加价</view>

  </view>
  <block wx:for='{{orderDetail.list}}' wx:key='index'>

    <view class='item'>
      <driverInfo></driverInfo>
      <view style='background:#f5f5f5;height:1rpx;width:100%;margin:10rpx 0 20rpx 20rpx;'></view>

      <view class='item-line2'>
        <image src='https://wx.cisdom.com.cn/public/smallob/image/ic_main_order.png' class='time-img'></image>
        <text class='item-time'>2018-12-26 12:30</text>
        <text class='item-shunlu'>80%顺路</text>
      </view>
      <view>
        <path path='{{orderDetail.route}}'></path>

      </view>
    </view>

  </block>
  <view class='wait-bottom'>

    <text class='wiat-money'>￥{{orderDetail.money}}</text>
    <view class='wait-money-detail' bindtap='priceDetail'>运费详情</view>

  </view>
</view>