/* pages/components/orderDetailPath.wxss */

.item {
  display: flex;
  flex-direction: column;
}

.item:active {
  background: #f5f5f5;
}

.top {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.title {
  max-width: 470rpx;
  min-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 10rpx;
  color: #323232;
  flex-grow: 1;
  font-weight: 500;
  font-size: 30rpx;
}

.content {
  padding-left: 10rpx;
  flex-grow: 1;
  font-size: 30rpx;
  color: #666;
  flex-direction: column;
}

.line {
  width: 50rpx;
  justify-content: center;
  align-items: center;
  justify-items: center;
  height: auto;
  display: flex;
  flex-direction: column;
}

.line-top {
  width: 1rpx;
  height: 25rpx;
  background-color: #dcdcdc;
}

.line-hide {
  width: 1rpx;
  height: 30rpx;
  background-color: transparent;
}

.divider {
  /* padding-bottom: 10rpx; *//* border-bottom: 1rpx solid #dcdcdc; */
}

.ver-divider {
  width: 1rpx;
  background: #dcdcdc;
  height: 30rpx;
}

.line-dot {
  /* background: #e67000; */
  width: 15rpx;
  height: 15rpx;
  border-radius: 15rpx;
}

.dot-start {
  /* background: #6dc135; */
  background-image: url('https://wx.cisdom.com.cn/public/smallob/image/ic_main_start_address.png');
  background-size: 13rpx 15.5rpx;
  background-repeat: no-repeat;
}

.dot-end {
  /* background: #e67000; */

    background-image: url('https://wx.cisdom.com.cn/public/smallob/image/ic_main_end_address.png');
  background-size: 13rpx 15.5rpx;
  background-repeat: no-repeat;
}

.line-dot-hide {
  align-items: center;
  text-align: center;
  background-color: #dcdcdc;
  width: 1rpx;
  height: 30rpx;
}

.line-bottom {
  background-color: #dcdcdc;
  width: 1rpx;
  height: 30rpx;
}

.bottom {
  display: flex;
  flex-direction: row;
}

.direction-img {
  width: 30rpx;
  height: 27rpx;
  margin-left:8rpx;
}

.direction {
  margin-right: 30rpx;
  color: #e67000;
  font-size: 28rpx;
}

.delete-img {
  margin-right: 30rpx;
  width: 30rpx;
  height: 30rpx;
}

.path-item {
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  color: #343434;
}

.path-divider {
  margin-left: 20rpx;
  background: #dcdcdc;
  width: 1rpx;
  height: 100%;
}

.path-name {
  flex-grow: 1;
}

