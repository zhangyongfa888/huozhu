<!--pages/tools/message.wxml-->

<view class='banner'>

  <view bindtap='onChoosed' data-index='0' class='{{index==0?"banneritemchoosed":"banneritem"}}'>
    <text class='{{index==0?"border-choosed":"border"}}'>聊天信息</text>
    <text class='mine-icon-num'>1</text>

  </view>
  <view bindtap='onChoosed' data-index='1' class=' {{index==1?"banneritemchoosed border-choosed":"banneritem border"}}'>系统消息</view>

</view>



<view class='parent'>
  <view wx:if='{{list.length==0}}'>
    <text class='nodata'>暂无数据</text>
  </view>


  <view wx:for='{{list}}' wx:key='idnex'>
    <view class='item'>
      <view class='line1'>
        <text class='title'>{{item.title}}</text>
        <text class='time'>{{item.create_time}}</text>
      </view>
      <view class='line2'>
        <text class='content'>{{item.content}}</text>
      </view>
    </view>

  </view>

</view>