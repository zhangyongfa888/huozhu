/* pages/tools/message.wxss */

.mine-icon-num {
  width: 20rpx;
  background: #e63700;
  text-align: center;
  color: white;
  padding: 2rpx;
  border-radius: 20rpx;
  height: 20rpx;
  font-size: 16rpx;
  align-self: flex-start;
}

.banner {
  z-index: 2;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  height: 50rpx;
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  font-size: 15px;
}

.banneritem {
  flex-direction: row;
  display: flex;
  width: auto;
  margin: 20rpx auto;
  text-align: center;
  padding-bottom: 10rpx;
  color: #666;
}

.banneritemchoosed {
  width: auto;
  margin: 20rpx auto;
  text-align: center;
  flex-direction: row;
  display: flex;
  padding-bottom: 10rpx;
  color: #ec6700;
}

.border-choosed {
  border-bottom: 4rpx solid #ec6700;
}

.border {
  border-bottom: 4rpx solid white;
}

.scroll {
  z-index: 1;
}

.parent {
  width: 750rpx;
  margin-top: 90rpx;
  font-size: 15px;
  display: flex;
  flex-direction: column;
}

.nodata {
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.item {
  margin: 10rpx;
  border-top: 1rpx solid #f5f5f5;
  border-left: 1rpx solid #f5f5f5;
  border-radius: 10rpx;
  border-bottom: 2rpx solid #dcdcdc;
  border-right: 2rpx solid #dcdcdc;
  display: flex;
  flex-direction: column;
}

.item:active {
  background: #f5f5f5;
}

.line1 {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
}

.line2 {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
}

.title {
  color: #111;
  flex-grow: 1;
}

.time {
  color: #666;
}

.content {
  color: #666;
  flex-grow: 1;
}
